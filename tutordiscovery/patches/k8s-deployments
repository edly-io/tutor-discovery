---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: discovery
  labels:
    app.kubernetes.io/name: discovery
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: discovery
  template:
    metadata:
      labels:
        app.kubernetes.io/name: discovery
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: discovery
          image: {{ DISCOVERY_DOCKER_IMAGE }}
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8000
          volumeMounts:
            - mountPath: /openedx/discovery/course_discovery/settings/tutor/production.py
              name: settings
              subPath: production.py
          securityContext:
            allowPrivilegeEscalation: false
      volumes:
        - name: settings
          configMap:
            name: discovery-settings
      imagePullSecrets:
      - name: {{ IMAGE_PULL_SECRET }}



---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: discovery-worker
  labels:
    app.kubernetes.io/name: discovery-worker
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: discovery-worker
  template:
    metadata:
      labels:
        app.kubernetes.io/name: discovery-worker
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: discovery-worker
          image: {{ DISCOVERY_DOCKER_IMAGE }}
          imagePullPolicy: IfNotPresent
          args: ["celery", "--app=course_discovery.celery", "worker", "--loglevel=info", "--max-tasks-per-child=100"]
          env:
          - name: SERVICE_VARIANT
            value: discovery
          - name: DJANGO_SETTINGS_MODULE
            value: course_discovery.settings.tutor.production
          volumeMounts:
            - mountPath: /openedx/discovery/course_discovery/settings/tutor/production.py
              name: settings
              subPath: production.py
          securityContext:
            allowPrivilegeEscalation: false
      volumes:
        - name: settings
          configMap:
            name: discovery-settings
      imagePullSecrets:
      - name: {{ IMAGE_PULL_SECRET }}
